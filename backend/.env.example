# Environment Configuration for StockSense Backend
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# Security Settings
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# Database (when implemented)
# MONGODB_URI=mongodb://localhost:27017/stocksense
# DB_NAME=stocksense

# JWT Secret (for authentication)
# JWT_SECRET=your-secret-key-here-change-in-production
# JWT_EXPIRES_IN=7d

# API Keys (if needed)
# ALPHA_VANTAGE_API_KEY=your-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Service
ANALYTICS_SERVICE_URL=http://localhost:8000
